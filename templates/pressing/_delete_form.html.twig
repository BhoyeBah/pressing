<form method="post" action="{{ path('app_pressing_delete', {'id': pressing.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pressing.id) }}">
    <button class="btn btn-danger btn-sm"><i class="bx bx-trash"></i></button>
</form>
